@model IEnumerable<Inspinia_MVC5.Models.Supporter>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Index</h2>
        <ol class="breadcrumb">
            <li class="active">
                <strong>Supporter</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>List of Supporter</h5>
                    <div class="ibox-tools">
                        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary btn-xs" })
                    </div>
                </div>
                <div class="ibox-content">
                    <table class="table table-striped">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.UserName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Company_Id)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FirstName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.LastName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Email)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Phone)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Role_Id)
                            </th>
                            <th></th>
                        </tr>
                        @foreach (var supporter in ((List<Inspinia_MVC5.Models.Supporter>) ViewData["supporters"]))
                        {
                            <tr>
                                <td>
                                    @Html.ActionLink(supporter.UserName, "Details", new { id = supporter.Supporter_Id }, null)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => supporter.Company.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => supporter.FirstName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => supporter.LastName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => supporter.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => supporter.Phone)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => supporter.Supporter_Roles.Name)
                                </td>
                                <td>
                                    @Html.ActionLink("Details", "Details", new { id = supporter.Supporter_Id }, new { @class = "btn btn-primary btn-sm" })
                                    @Html.ActionLink("Edit", "Edit", new { id = supporter.Supporter_Id }, new { @class = "btn btn-white btn-sm" })
                                    @Html.ActionLink("Delete", "Delete", new { id = supporter.Supporter_Id }, new { @class = "btn btn-white btn-sm" })
                                </td>
                            </tr>
                        }
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>
