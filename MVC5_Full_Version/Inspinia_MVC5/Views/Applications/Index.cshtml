@model Inspinia_MVC5.Models.Application
<!-- IEnumerable<Inspinia_MVC5.Models.Application> -->

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Index</h2>
        <ol class="breadcrumb">
            <li class="active">
                <strong>Application</strong>
            </li>
        </ol>
    </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>List of Applications</h5>
					<div class="ibox-tools">
						@Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary btn-xs"})
					</div>
                </div>
                <div class="ibox-content">

<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Company_Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ApplicationToken)
        </th>
        <th></th>
    </tr>

@foreach (var item in (List<Inspinia_MVC5.Models.Application>)ViewData["applications"]) 
{
    Inspinia_MVC5.Models.Application application = (Inspinia_MVC5.Models.Application) item;
    
    <tr>
        <td>
            @Html.ActionLink(application.Name, "Details", new { id = application.Application_Id }, null)
        </td>
        <td>
            @application.Company_Id.ToString()
        </td>
        <td>
            @application.ApplicationToken.ToString()
        </td>
        <td>
			@Html.ActionLink("Details", "Details", new { id = application.Application_Id }, new { @class = "btn btn-primary btn-sm" })
            @Html.ActionLink("Edit", "Edit", new { id = application.Application_Id }, new { @class = "btn btn-white btn-sm" })
            @Html.ActionLink("Delete", "Delete", new { id = application.Application_Id }, new { @class = "btn btn-white btn-sm" })
        </td>
    </tr>
}

</table>

                </div>
            </div>
        </div>
    </div>
 </div>



