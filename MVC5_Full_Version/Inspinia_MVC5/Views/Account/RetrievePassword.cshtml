@model Inspinia_MVC5.Models.RetrieveModel
@{
    ViewBag.Title = "Retrieve Password";
}

<div class="login-container">
    <div class="center">
        <h1>
            <i class="icon-leaf green"></i>
            <span class="red">IMR</span>
            <span class="blue">Framework</span>
        </h1>
        <h4 class="blue">&copy; EduTechnologic</h4>
    </div>
    <div class="space-6"></div>
    <div class="position-relative">
        <div id="login-box" class="login-box visible widget-box no-border">
            <div class="widget-body">
                <div class="widget-main">
                    <h4 class="header blue lighter bigger">
                        <i class="icon-coffee green"></i>
                        Retrieve Your Password
                    </h4>
                    <h5 class="blue lighter">Please enter your username, new password will send to your E-mail</h5>
                    <div class="space-6"></div>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)

                        <fieldset>
                            @Html.ValidationMessageFor(model => model.UserName)
                            <label class="block clearfix">
                                <span class="block input-icon input-icon-right">
                                    @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", placeholder = "Username" })
                                    <i class="icon-user"></i>
                                </span>
                            </label>

                            <div class="space"></div>
                            <div class="clearfix">

                                <button type="submit" class="width-35 pull-right btn btn-sm btn-primary">
                                    <i class="icon-key"></i>
                                    Retrieve
                                </button>
                            </div>
                            <div class="space-4"></div>
                            <div class="clearfix">
                                <label class="inline">
                                    <span class="lbl">Need Login?</span>
                                </label>
                                <a href='@(Url.Action("Login", "Account"))' class="width-35 pull-right btn btn-sm btn-success"><i class="icon-arrow-right">&nbsp;</i>Login</a>
                            </div>
                        </fieldset>
                    }
                </div>

            </div>
            <!-- /widget-body -->
        </div>
        <!-- /login-box -->
    </div>
    <!-- /position-relative -->
</div>